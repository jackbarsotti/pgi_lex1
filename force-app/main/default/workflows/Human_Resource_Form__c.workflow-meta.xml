    <rules>
        <fullName>HR NewHire-NA-Created Email</fullName>
        <actions>
            <name>HR_NewHire_NA_Created_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Human_Resource_Form__c.CreatedDate</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Human_Resource_Form__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>New Worker</value>
        </criteriaItems>
        <criteriaItems>
            <field>Human_Resource_Form__c.Locations_Region__c</field>
            <operation>equals</operation>
            <value>NA</value>
        </criteriaItems>
        <description>Sends an email to HR Team once a new hire record is created for NA</description>
        <triggerType>onCreateOnly</triggerType>
