<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>saleswings__Failing_Log_Email_Alert</fullName>
        <description>Failing Log Email Alert</description>
        <protected>false</protected>
        <recipients>
            <field>saleswings__Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>saleswings__SalesWings_Email_Templates/saleswings__Failing_Log_Email_Template</template>
    </alerts>
    <rules>
        <fullName>saleswings__Failing Log Created</fullName>
        <actions>
            <name>saleswings__Failing_Log_Email_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>NOT($Setup.saleswings__SalesWings_Options__c.saleswings__Disable_Email_Log__c) &amp;&amp;  TEXT(saleswings__Result__c)=&quot;Failure&quot;</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
