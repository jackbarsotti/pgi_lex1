<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>PGi_CSI_Email_to_Creator_and_Manager</fullName>
        <description>PGi-CSI-Email to Creator and Manager</description>
        <protected>false</protected>
        <recipients>
            <field>Agent_Responsible__c</field>
            <type>userLookup</type>
        </recipients>
        <recipients>
            <field>Agent_s_Manager__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/CSI_Created</template>
    </alerts>
    <alerts>
        <fullName>PGi_CSI_Flag_Review_Completion</fullName>
        <description>PGi-CSI Flag Review Completion</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/CSI_Completed</template>
    </alerts>
    <alerts>
        <fullName>PGi_CSI_Reminder_notification</fullName>
        <description>PGi-CSI Reminder notification</description>
        <protected>false</protected>
        <recipients>
            <field>Agent_s_Manager__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/CSI_Reminder</template>
    </alerts>
    <alerts>
        <fullName>PGi_CSI_Reminder_notification_Closed_CSI</fullName>
        <description>PGi-CSI Reminder notification - Closed CSI</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <field>Agent_s_Manager__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/CSI_Completed</template>
    </alerts>
    <fieldUpdates>
        <fullName>CSI_Auto_Close</fullName>
        <description>After 30 days, if not marked completed, auto close</description>
        <field>Complete__c</field>
        <literalValue>1</literalValue>
        <name>CSI Auto Close</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>CSI_Auto_Close_Comments</fullName>
        <description>After Auto Close, update</description>
        <field>Action_Comments__c</field>
        <formula>&quot;Closed due to no response&quot;</formula>
        <name>CSI Auto Close Comments</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>CSI_Completed_Time_Update</fullName>
        <field>Review_complete_time__c</field>
        <formula>NOW()</formula>
        <name>CSI Completed Time Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>PGi_CSI_Creation_checkbox</fullName>
        <field>Email_to_be_sent__c</field>
        <literalValue>1</literalValue>
        <name>PGi-CSI-Creation checkbox</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>PGi-CSI Creation Email alert</fullName>
        <actions>
            <name>PGi_CSI_Email_to_Creator_and_Manager</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Email_to_be_sent__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Send email alert</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PGi-CSI Creation checkbox</fullName>
        <actions>
            <name>PGi_CSI_Creation_checkbox</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.CreatedDate</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <description>ready to Send email alert</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>PGi-CSI Not Completed 14 days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Reminder email to get out when the Complete box is still unchecked after two weeks</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>PGi_CSI_Reminder_notification</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>CSI__c.CreatedDate</offsetFromField>
            <timeLength>14</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>PGi-CSI Not Completed 21 days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Reminder email to get out when the Complete box is still unchecked after three weeks</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>PGi_CSI_Reminder_notification</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>CSI__c.CreatedDate</offsetFromField>
            <timeLength>21</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>PGi-CSI Not Completed 30 days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Reminder email to get out when the Complete box is still unchecked after 30 days</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>PGi_CSI_Reminder_notification_Closed_CSI</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>CSI_Auto_Close</name>
                <type>FieldUpdate</type>
            </actions>
            <actions>
                <name>CSI_Auto_Close_Comments</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>CSI__c.CreatedDate</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>PGi-CSI Not Completed 7 days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Reminder email to get out when the Complete box is still unchecked after one week</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>PGi_CSI_Reminder_notification</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>CSI__c.CreatedDate</offsetFromField>
            <timeLength>7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>PGi-CSI Status Completed</fullName>
        <actions>
            <name>CSI_Auto_Close</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>CSI__c.Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <description>When status is closed - auto check completed checkbox</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PGi-CSI-Completed notifications</fullName>
        <actions>
            <name>PGi_CSI_Flag_Review_Completion</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>CSI_Completed_Time_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CSI__c.Complete__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Sends an email to the Quality user once review completed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
