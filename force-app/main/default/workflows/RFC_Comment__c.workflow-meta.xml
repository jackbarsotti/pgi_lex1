<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>RFC_Comment_Notify</fullName>
        <description>RFC-Comment Notify</description>
        <protected>false</protected>
        <recipients>
            <field>RFCAssignedTosEmail__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>pgisfnoreply@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Workflow_Emails/RFC_Comment_Notify</template>
    </alerts>
    <fieldUpdates>
        <fullName>RFC_Comment_Assigned_To</fullName>
        <field>RFCAssignedTosEmail__c</field>
        <formula>Related_RFC__r.Assigned_To__r.Email</formula>
        <name>RFC-Comment Assigned To</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>RFC-Comment Assigned To</fullName>
        <actions>
            <name>RFC_Comment_Assigned_To</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>RFC_Comment__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>bring down the Assigned To email at the time the RFC comment is created or edited</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>RFC-Comment Notify</fullName>
        <actions>
            <name>RFC_Comment_Notify</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>RFC_Comment__c.Notify_RFC_Owner__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>send emails notification to the Assigned To of the RFC</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
