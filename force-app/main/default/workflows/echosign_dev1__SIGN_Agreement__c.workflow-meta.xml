<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Signed_APAC_Agreements</fullName>
        <ccEmails>appricing@pgi.com</ccEmails>
        <description>Signed APAC Agreements</description>
        <protected>false</protected>
        <senderAddress>salesforcecrmsupport@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Workflow_Emails/Agreement_Signed</template>
    </alerts>
    <alerts>
        <fullName>Signed_NA_Agreements</fullName>
        <ccEmails>completedcustomeragreements@pgi.com,executedagreements@pgi.com</ccEmails>
        <description>Signed NA Agreements</description>
        <protected>false</protected>
        <senderAddress>pgisfnoreply@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Workflow_Emails/Agreement_Signed</template>
    </alerts>
    <fieldUpdates>
        <fullName>Cancelled_Status</fullName>
        <field>echosign_dev1__Status__c</field>
        <literalValue>Cancelled / Declined</literalValue>
        <name>Cancelled Status</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Cancel - Draft</fullName>
        <active>true</active>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.echosign_dev1__Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <description>Cancel an agreement if it has been in a status of &quot;Draft&quot; for 30 days.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Cancelled_Status</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>echosign_dev1__SIGN_Agreement__c.CreatedDate</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Cancel - Out for Signature</fullName>
        <active>true</active>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.echosign_dev1__Status__c</field>
            <operation>equals</operation>
            <value>Out for Signature</value>
        </criteriaItems>
        <description>Cancel an agreement if it has been out for customer signature for 60 days.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Cancelled_Status</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>echosign_dev1__SIGN_Agreement__c.echosign_dev1__DateSent__c</offsetFromField>
            <timeLength>60</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Signed APAC Agreements</fullName>
        <actions>
            <name>Signed_APAC_Agreements</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.echosign_dev1__Status__c</field>
            <operation>equals</operation>
            <value>Signed</value>
        </criteriaItems>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.Template_Type_Used__c</field>
            <operation>contains</operation>
            <value>APAC</value>
        </criteriaItems>
        <description>Send notification to appricing@pgi.com once agreement is signed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Signed NA Agreements</fullName>
        <actions>
            <name>Signed_NA_Agreements</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.echosign_dev1__Status__c</field>
            <operation>equals</operation>
            <value>Signed</value>
        </criteriaItems>
        <criteriaItems>
            <field>echosign_dev1__SIGN_Agreement__c.Template_Type_Used__c</field>
            <operation>contains</operation>
            <value>NA</value>
        </criteriaItems>
        <description>Send notification to CompletedCustomerAgr@pgi.com once agreement is signed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
