<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>PGi_Product_Cust_Approved</fullName>
        <ccEmails>michael.khatchadourian@pgi.com; Julie.Fry@pgi.com</ccEmails>
        <description>PGi - Product Cust Approved</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderAddress>pgisfnoreply@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Assigned_to_Templates/Product_Customization_Approved</template>
    </alerts>
    <alerts>
        <fullName>PGi_Product_Cust_Rejected</fullName>
        <description>PGi - Product Cust Rejected</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderAddress>pgisfnoreply@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Assigned_to_Templates/Product_Customization_Rejected</template>
    </alerts>
    <fieldUpdates>
        <fullName>PGi_Update_Product_Cust_Status_to_Appr</fullName>
        <field>Partner_Portal_Account_Status__c</field>
        <literalValue>Approved</literalValue>
        <name>PGi - Update Product Cust Status to Appr</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>PGi_Update_Product_Cust_Status_to_Pend</fullName>
        <field>Partner_Portal_Account_Status__c</field>
        <literalValue>Pending Approvals</literalValue>
        <name>PGi - Update Product Cust Status to Pend</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>PGi_Update_Product_Cust_Status_to_Rjct</fullName>
        <field>Partner_Portal_Account_Status__c</field>
        <literalValue>Rejected</literalValue>
        <name>PGi - Update Product Cust Status to Rjct</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>PGi_Update_Time_Code</fullName>
        <field>TimeCode__c</field>
        <literalValue>Custom</literalValue>
        <name>PGi - Update Time Code</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>PGi - Update Time Code</fullName>
        <actions>
            <name>PGi_Update_Time_Code</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>ProductCustomizationRequest__c.Will_Customer_Pay_Entire_Value__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
        <criteriaItems>
            <field>ProductCustomizationRequest__c.Request_to_Waive_Fees__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <description>To set the Time Code as Custom when the fees are waived and customer will not pay.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
