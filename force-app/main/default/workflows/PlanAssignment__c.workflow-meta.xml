<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>RTEmail_Alert_to_Notify_Event_Coordinators_a_Subscription_Has_Been_Upgraded_to_a</fullName>
        <ccEmails>resource.rtevents@PGI.com</ccEmails>
        <description>RTEmail Alert to Notify Event Coordinators a Subscription Has Been Upgraded to a Webinar Product</description>
        <protected>false</protected>
        <senderAddress>pgisfnoreply@pgi.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>ReadyTalk_Email_Templates/RT_Event_Coordinator_Webinar_Upgrade_Notification</template>
    </alerts>
    <outboundMessages>
        <fullName>Plan_Assignment_Outbound</fullName>
        <apiVersion>29.0</apiVersion>
        <endpointUrl>https://provision.ecovate.com/bbs-provisioning/inboundGateway</endpointUrl>
        <fields>CreatedById</fields>
        <fields>CreatedDate</fields>
        <fields>FoxDen_User__c</fields>
        <fields>Id</fields>
        <fields>IsDeleted</fields>
        <fields>LastModifiedById</fields>
        <fields>LastModifiedDate</fields>
        <fields>Name</fields>
        <fields>OwnerId</fields>
        <fields>SystemModstamp</fields>
        <fields>accessCode__c</fields>
        <fields>contact__c</fields>
        <fields>endDate__c</fields>
        <fields>objectId__c</fields>
        <fields>plan__c</fields>
        <fields>sObjectApiName__c</fields>
        <fields>sObjectId__c</fields>
        <fields>startDate__c</fields>
        <includeSessionId>false</includeSessionId>
        <integrationUser>rtsfsherpa@readytalk.com</integrationUser>
        <name>Plan Assignment Outbound</name>
        <protected>false</protected>
        <useDeadLetterQueue>false</useDeadLetterQueue>
    </outboundMessages>
    <rules>
        <fullName>Fire Plan Assignment Outbound</fullName>
        <actions>
            <name>Plan_Assignment_Outbound</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <description>ReadyTalk</description>
        <formula>$User.ReadyTalk_Exempt__c = FALSE</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>RT_Notify Events of Subscription Upgrades</fullName>
        <actions>
            <name>RTEmail_Alert_to_Notify_Event_Coordinators_a_Subscription_Has_Been_Upgraded_to_a</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>PlanAssignment__c.Name</field>
            <operation>contains</operation>
            <value>Webinar</value>
        </criteriaItems>
        <criteriaItems>
            <field>PlanAssignment__c.startDate__c</field>
            <operation>greaterOrEqual</operation>
            <value>TODAY</value>
        </criteriaItems>
        <description>An email alert to let the Event Coordinators know when a subscription is upgrade to a webinar</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
