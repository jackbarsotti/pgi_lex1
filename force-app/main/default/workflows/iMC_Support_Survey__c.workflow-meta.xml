<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>iMC_Support_Survey_New_FlightReady_Survey</fullName>
        <description>iMC - Support Survey, New FlightReady Survey</description>
        <protected>false</protected>
        <recipients>
            <recipient>kevin.lewis@pgi.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>iMC_Internal_Company_Alerts/iMC_Implementation_Survey_Services</template>
    </alerts>
    <alerts>
        <fullName>iMC_Survey_Alert</fullName>
        <description>iMC - Survey, Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>elizabeth.bruns@pgi.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>kevin.lewis@pgi.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>paul.zukauskas@pgi.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>iMC_Internal_Company_Alerts/iMC_Support_Survey_Services</template>
    </alerts>
    <fieldUpdates>
        <fullName>iMC_Support_Survey_Assign_to_Queue</fullName>
        <field>OwnerId</field>
        <lookupValue>iMC_Survey_Queue</lookupValue>
        <lookupValueType>Queue</lookupValueType>
        <name>iMC - Support Survey, Assign to Queue</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>iMC_Support_Survey_Survey_Type</fullName>
        <field>Survey_Type__c</field>
        <formula>&quot;Implementation&quot;</formula>
        <name>iMC - Support Survey, Survey Type</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>iMC - Support Survey%2C Alert</fullName>
        <actions>
            <name>iMC_Survey_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND (3 OR 4 OR 5 OR 6 OR 7)</booleanFilter>
        <criteriaItems>
            <field>iMC_Support_Survey__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>iMC Survey,iMC Support Survey,iMC Implementation Survey,iMC NPS Survey</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Survey_Type__c</field>
            <operation>equals</operation>
            <value>Support,Inproduct,Product</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Recommendation_Probability__c</field>
            <operation>equals</operation>
            <value>6,5,4,3,2,1</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Professionalism__c</field>
            <operation>equals</operation>
            <value>6,5,4,3,2,1</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Courtesy__c</field>
            <operation>equals</operation>
            <value>6,5,4,3,2,1</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Timeliness__c</field>
            <operation>equals</operation>
            <value>6,5,4,3,2,1</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Technical_Knowledge_Skills__c</field>
            <operation>equals</operation>
            <value>6,5,4,3,2,1</value>
        </criteriaItems>
        <description>When a Support Survey is submitted with scores lower than 7, alert CE Team.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>iMC - Support Survey%2C Assign to Queue</fullName>
        <actions>
            <name>iMC_Support_Survey_Assign_to_Queue</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>iMC_Support_Survey__c.OwnerId</field>
            <operation>notEqual</operation>
            <value>Survey Queue</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>iMC Implementation Survey,iMC NPS Survey,iMC Support Survey,iMC Survey</value>
        </criteriaItems>
        <description>This will assign the iMC Survey to the Survey Queue.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>iMC - Support Survey%2C Case Number</fullName>
        <active>true</active>
        <description>This rule will clear the Follow Up Case on an Implementation Survey.</description>
        <formula>AND(  RecordType.DeveloperName = &quot;iMC Survey&quot; ||   RecordType.DeveloperName = &quot;iMC NPS Survey&quot; ||   RecordType.DeveloperName = &quot;iMC Support Survey&quot; ||   RecordType.DeveloperName = &quot;iMC Implementation Survey&quot;,  Case__c =  ImplementationCase__c &amp;&amp;  NOT(ISBLANK(ImplementationCase__c)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>iMC - Support Survey%2C New FlightReady Survey</fullName>
        <actions>
            <name>iMC_Support_Survey_New_FlightReady_Survey</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>iMC_Support_Survey__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>iMC Implementation Survey</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Name</field>
            <operation>equals</operation>
            <value>iMC Implementation Survey</value>
        </criteriaItems>
        <description>Send notification when a new FlightReady Survey is received.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>iMC - Support Survey%2C Survey Type</fullName>
        <actions>
            <name>iMC_Support_Survey_Survey_Type</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Name</field>
            <operation>contains</operation>
            <value>GetFeedback Survey Response: FlightReady</value>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.Survey_Type__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>iMC_Support_Survey__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>iMC Implementation Survey,iMC NPS Survey,iMC Support Survey,iMC Survey</value>
        </criteriaItems>
        <description>This will update the Survey Type field to &quot;Implementation&quot; when the field is blank AND the Survey Name contains &quot;GetFeedback&quot;.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
