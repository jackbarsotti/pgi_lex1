        <fullName>PGI - Renewal Product Changed</fullName>
        <actions>
            <name>PGI_Renewal_Product_Changed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>If product is changed on an open PGI Renewal Opportunity, send email alert.</description>
        <formula>AND(
Opportunity.RecordTypeId = &quot;0121B000001dUdY&quot;,
