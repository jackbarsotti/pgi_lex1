<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>TaskRay_Project_Completed_FALSE</fullName>
        <field>TASKRAY__trCompleted__c</field>
        <literalValue>0</literalValue>
        <name>TaskRay Project - Completed = FALSE</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>TaskRay_Project_Completed_TRUE</fullName>
        <field>TASKRAY__trCompleted__c</field>
        <literalValue>1</literalValue>
        <name>TaskRay Project - Completed = TRUE</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>TaskRay Project - Completed %3D FALSE</fullName>
        <actions>
            <name>TaskRay_Project_Completed_FALSE</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>TASKRAY__Project__c.Open_Tasks__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
        <description>If all the related TaskRay Tasks are not completed, then mark the &apos;Completed&apos; checkbox as FALSE on the TaskRay Project.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>TaskRay Project - Completed %3D TRUE</fullName>
        <actions>
            <name>TaskRay_Project_Completed_TRUE</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>If all the related TaskRay Tasks are completed, then mark the &apos;Completed&apos; checkbox as TRUE on the TaskRay Project.</description>
        <formula>AND( NOT(ISNEW()), Open_Tasks__c = 0 )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
