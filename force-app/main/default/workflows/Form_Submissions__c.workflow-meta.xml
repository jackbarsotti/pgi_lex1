<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>All_New_Form_on_Contact_or_Lead</fullName>
        <description>All-New Form on Contact or Lead</description>
        <protected>false</protected>
        <recipients>
            <type>campaignMemberDerivedOwner</type>
        </recipients>
        <recipients>
            <recipient>jessica.combs@pgi.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/New_Form_Submission</template>
    </alerts>
    <rules>
        <fullName>All-New Form on Contact or Lead</fullName>
        <actions>
            <name>All_New_Form_on_Contact_or_Lead</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>OR(
NOT(ISBLANK(Lead_Id__r.Owner:User.Id)), 
 NOT(ISBLANK(Contact_Id__r.OwnerId)))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
