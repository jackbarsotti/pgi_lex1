<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Notify_RP_Manager</fullName>
        <description>Notify RP Manager</description>
        <protected>false</protected>
        <recipients>
            <field>RP_Manager_s_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Secondary_Manager_s_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Emails/Notify_RP_Manager</template>
    </alerts>
    <rules>
        <fullName>Notify RP Manager</fullName>
        <actions>
            <name>Notify_RP_Manager</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Responsible_Party__c.RP_Manager_s_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Responsible_Party__c.Secondary_Manager_s_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>When a new Responsible Party record is created, send an email to the address provided in the RP Manager&#39;s Email field.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
