<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ecomm.customer@pgi.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Contract_Type__c</field>
        <field>Owner</field>
        <field>Account_Name__c</field>
        <field>Opportunity__c</field>
        <field>Approval_Request_Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>iContract_Step_Completed</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>All Pricing Approvals start with the Owner&#39;s Manager.</description>
        <entryCriteria>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Pricing_Manager__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Submitters_Manager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pricing - Manager</label>
        <name>Pricing_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>iContract_Step_Completed</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owners_RVP__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Anything over the Sales Rep Limit will go to their RVP.</description>
        <entryCriteria>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Pricing_RVP__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Owners_RVP__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Deal_Desk__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pricing - RVP</label>
        <name>Pricing_RVP</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>iContract_Step_Completed</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owners_SVP__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Anything over the RVP Limit will go to their SVP.</description>
        <entryCriteria>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Pricing_SVP__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Owners_SVP__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Deal_Desk__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Pricing - SVP</label>
        <name>Pricing_SVP</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Deal_Desk_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>iContract_Step_Completed</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>PGi_Contract_APAC_Deal_Desk</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Anything over the SVP Limit will go to the deal desk.</description>
        <entryCriteria>
            <booleanFilter>1 OR 2</booleanFilter>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Deal_Desk__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>CONMAN_Contract__c.Required_Approval_Legal__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Pricing - Deal Desk</label>
        <name>Pricing_Deal_Desk</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>All of the Approvals that can be used in APAC iContract.</description>
    <emailTemplate>Contract_Management/iContract_Submitted_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 2 OR 3 OR 4 OR 5 OR 6 OR 7) AND 8</booleanFilter>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Pricing_Manager__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Legal__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Deal_Desk__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_ARG__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Billing__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Pricing_SVP__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.Required_Approval_Pricing_RVP__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>CONMAN_Contract__c.RecordType</field>
            <operation>equals</operation>
            <value>APAC Contract</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>iContract_Approval_Completed</name>
            <type>Alert</type>
        </action>
        <action>
            <name>iContract_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_ARG_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Billing_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Legal_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Approval_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Deal_Desk</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_RVP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_SVP</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>iContract_Approval_Completed</name>
            <type>Alert</type>
        </action>
        <action>
            <name>iContract_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_ARG_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Legal_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Approval_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Deal_Desk</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_RVP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_SVP</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>iContract_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>iContract APAC Approvals</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>iContract_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_ARG_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Legal_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Approval_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_Deal_Desk</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_RVP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unrequire_Pricing_SVP</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
