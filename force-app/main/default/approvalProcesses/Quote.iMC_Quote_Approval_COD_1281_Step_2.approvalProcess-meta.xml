<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>BillingName</field>
        <field>Contact</field>
        <field>ExpirationDate</field>
        <field>Discount</field>
        <field>LineItemCount</field>
        <field>Grand_Total_US__c</field>
        <field>Status</field>
        <field>IsSyncing</field>
        <field>TotalPrice</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mark.fordham@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Opportunity Owner equals Marianna Rodriguez, Jason Hurst or Rula Marie, the Total Bookings amount is &gt;=$10,000, not a Renewal, and Frank Nardi has approved</description>
        <entryCriteria>
            <booleanFilter>1 AND 2</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Owner</field>
                <operation>equals</operation>
                <value>Marianna Rodriguez,Jason Hurst,Rula Marie</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Total_Bookings__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Marianna, Jason, Rula Quote Approval, &gt;=$10k, No Renewals</label>
        <name>Marianna_Jason_Rula_Quote_Approval_10k_No_Renewals</name>
    </approvalStep>
    <description>iMeet Central Quote Approvals only.</description>
    <emailTemplate>iMC_Internal_Company_Alerts/iMC_Quote_Approvals_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>iMC Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Frank Pre-Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>iMC_Quote_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>iMC_Quote_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>iMC_Quote_Status_Needs_Review</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>iMC Quote Approval: COD-1281, Step 2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>quote_approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
