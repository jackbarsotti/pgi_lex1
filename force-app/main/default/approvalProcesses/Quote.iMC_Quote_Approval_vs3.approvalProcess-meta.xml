<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>BillingName</field>
        <field>Contact</field>
        <field>ExpirationDate</field>
        <field>Discount</field>
        <field>LineItemCount</field>
        <field>Grand_Total_US__c</field>
        <field>Status</field>
        <field>IsSyncing</field>
        <field>TotalPrice</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>iMC_Quote_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>william.mcgovern@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>All iMC Quotes</label>
        <name>All_iMC_Quotes</name>
    </approvalStep>
    <description>1/15/20 - Removing Frank and 2nd step of Jason Downs and putting 1 step to Bill McGovern</description>
    <emailTemplate>iMC_Internal_Company_Alerts/iMC_Quote_Approvals_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>iMC Quote</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>iMC_Quote_Status_Needs_Review</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>iMC_Quote_Service_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>iMC_Quote_Status_Needs_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>iMC Quote Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>quote_approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
