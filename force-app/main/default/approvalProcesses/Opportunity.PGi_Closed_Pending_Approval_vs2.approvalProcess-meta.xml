<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>Products__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.jones@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ecaterina.ivanov@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>fionnuala.odonoghue@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>kim.sankovich@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marian.o&#39;hara@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>melinda.michell@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ruth.rhodes@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If the deal type is not Upsell and Webinar is being sold, then it requires audit approval.</description>
        <entryCriteria>
            <booleanFilter>(1 OR 2) AND 3</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Product_MRR_Total_Webinar__c</field>
                <operation>greaterThan</operation>
                <value>USD 0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Product_NRR_Total_Webinar__c</field>
                <operation>greaterThan</operation>
                <value>USD 0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Deal_Type__c</field>
                <operation>notEqual</operation>
                <value>Up-Sell (Rev Increase)</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Webinar Review</label>
        <name>Webinar_Review</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Won_Approval_Request_Submitted_HTML</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Pending Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ClosedWon_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Forecast_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Stage_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ClosedWon_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Purchase</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Pending Approval (Webinar)</label>
    <recallActions>
        <action>
            <name>Stage_to_Purchase</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
