<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Assigned_To__c</field>
        <field>Related_Account__c</field>
        <field>Credit_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>william.mcgovern@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>Customer Credits to be processed through approvals.</description>
    <emailTemplate>ReadyTalk_Email_Templates/RT_Financial_Credit_Request_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Financial_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>ReadyTalk Credit Request</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RT_Financial_Credit_Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RT_Financial_Credit_Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RT_Financial_Credit_Request_Assignment</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RT_Financial_Credit_Request_Created</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RT_Credit Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>RT_Financial_Credit_Request_Cancelled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Cancelled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
