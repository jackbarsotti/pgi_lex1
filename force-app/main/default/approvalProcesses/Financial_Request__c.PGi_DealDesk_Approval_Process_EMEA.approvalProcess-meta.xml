<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Assigned_To__c</field>
        <field>PGi_Contract__c</field>
        <field>Related_Opportunity__c</field>
        <field>Date_Submitted__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>james.boyd@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jurgen.aerts@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>shelley.werner@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Financial_Request__c.RecordType</field>
                <operation>equals</operation>
                <value>PGi-Pricing Help Request</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>When an EMEA PGi Contract is set for Deal Desk approval, a FinReq is created and will be approved on the FinReq.  Trigger will update the corresponding PGi Contract.</description>
    <emailTemplate>FinReq_Folder/PGi_FinReq_DealDesk_to_be_approved</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 6 AND (4 or 5)</booleanFilter>
        <criteriaItems>
            <field>Financial_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>PGi-Pricing Help Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Origin__c</field>
            <operation>equals</operation>
            <value>PGi Contract</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>DealDesk Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Approved,Rejected,Cancelled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Pricing_Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved,Cancelled,Rejected,Completed as Case</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Region__c</field>
            <operation>equals</operation>
            <value>EMEA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PGi_FinReq_DealDesk_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_DealDesk_Approved_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PGi_FinReq_DealDesk_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_DealDesk_Rejected_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PGi_DealDesk Approval Process EMEA</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>PGi_FinReq_DealDesk_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_DealDesk_Rejected_cancelled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
