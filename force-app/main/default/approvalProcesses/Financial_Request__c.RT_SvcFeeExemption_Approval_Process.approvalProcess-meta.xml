<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Assigned_To__c</field>
        <field>Duration__c</field>
        <field>Anticipated_Annual_Revenue_Loss__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>RT_Financial_Exemption_Request_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>RT_Financial_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>william.mcgovern@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Financial_Request__c.Anticipated_Annual_Revenue_Loss__c</field>
                <operation>greaterThan</operation>
                <value>USD 500</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>RT_Financial_Exemption_Request_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>RT_Financial_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>ReadyTalk_Email_Templates/RT_Financial_SvcFeeExemption_Request_Approver_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Financial_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>ReadyTalk Exemption Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Type__c</field>
            <operation>equals</operation>
            <value>Service Fee Exemption</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RT_Financial_Exemption_Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RT_Financial_Exemption_Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RT_Financial_Exemption_Request_Assignmen</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RT_Financial_Exemption_Request_Created</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RT_SvcFeeExemption Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>RT_Financial_Exemption_Request_Cancelled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RT_Financial_Status_to_Cancelled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
