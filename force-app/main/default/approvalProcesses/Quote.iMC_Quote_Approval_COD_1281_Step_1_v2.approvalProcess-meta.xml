<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Name</field>
        <field>BillingName</field>
        <field>Contact</field>
        <field>ExpirationDate</field>
        <field>Discount</field>
        <field>LineItemCount</field>
        <field>Grand_Total_US__c</field>
        <field>Status</field>
        <field>IsSyncing</field>
        <field>TotalPrice</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>iMC_Quote_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>frank.nardi@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If the &quot;Professional Services&quot; OR &quot;Implementation&quot; field is &gt;=$10K upon quote submission, Send to Mark Fordham for approval.</description>
        <entryCriteria>
            <booleanFilter>1 OR 2</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Professional_Services_Bookings__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Implementation_Bookings__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>$10K Service Approval</label>
        <name>X10K_Service_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>iMC_Quote_Service_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>iMC_Quote_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mark.fordham@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>If Opportunity Owner equals Frank Nardi, Cohry Osborne or Eddie Medal, seek Mark Fordham&#39;s approval.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Owner</field>
                <operation>equals</operation>
                <value>Frank Nardi,Cohry Osborne,Eddie Medal</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Professional_Services_Bookings__c</field>
                <operation>lessThan</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Implementation_Bookings__c</field>
                <operation>lessThan</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Frank, Cohry &amp; Eddie Quote Approval</label>
        <name>Frank_Cohry_Eddie_Quote_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>iMC_Quote_Service_Status_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Quote_Rejected_by_Services_Team</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>iMC_Quote_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>frank.nardi@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Opportunity Owner equals Marianna Rodriguez, Jason Hurst or Rula Marie, and the quote amount is &lt;$10,000, seek Frank Nardi&#39;s approval.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Owner</field>
                <operation>equals</operation>
                <value>Marianna Rodriguez,Jason Hurst,Rula Marie</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Total_Bookings__c</field>
                <operation>lessThan</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Marianna, Jason, Rula Quote Approval, &lt;$10k</label>
        <name>Marianna_Jason_Rula_Quote_Approval_10k</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Status_FN_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>frank.nardi@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Opportunity Owner equals Marianna Rodriguez, Jason Hurst or Rula Marie, the quote amount is &gt;=$10,000, and not a Renewal, seek Frank Nardi&#39;s approval, then Mark Fordham&#39;s approval.</description>
        <entryCriteria>
            <booleanFilter>1 AND 2 AND 3</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Owner</field>
                <operation>equals</operation>
                <value>Marianna Rodriguez,Jason Hurst,Rula Marie</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Total_Bookings__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;USD 10,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>iMC Opportunity</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Marianna, Jason, Rula Quote Approval, &gt;=$10k, No Renewals</label>
        <name>Marianna_Jason_Rula_Quote_Approval_10k_No_Renewals</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>frank.nardi@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Opportunity Owner equals Marianna Rodriguez, Jason Hurst, Rula Marie, and it&#39;s a Renewal, seek Frank Nardi&#39;s approval.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Owner</field>
                <operation>equals</operation>
                <value>Marianna Rodriguez,Jason Hurst,Rula Marie</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>iMC Renewal Opportunity</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Marianna, Jason, Rula, Quote Approval, Renewals</label>
        <name>Marianna_Jason_Rula_Quote_Approval_Renewals</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>iMC_Quote_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>iMC_Quote_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>steve.anderson@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Seek Steve Anderson&#39;s approval if Quote Discount is &gt;=20%.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.Discount</field>
                <operation>greaterOrEqual</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>iMC_Quote_Reject_by_Finance</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>iMeet Central Quote Approvals only..</description>
    <emailTemplate>iMC_Internal_Company_Alerts/iMC_Quote_Approvals_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>iMC Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>notEqual</operation>
            <value>Frank Pre-Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>iMC_Quote_Status_Needs_Review</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>iMC_Quote_Service_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>iMC_Quote_Status_Needs_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>iMC Quote Approval: COD-1281, Step 1</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>quote_approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
