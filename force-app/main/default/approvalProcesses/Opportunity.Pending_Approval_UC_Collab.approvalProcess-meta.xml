<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>Products__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.jones@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ecaterina.ivanov@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>fionnuala.odonoghue@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>kim.sankovich@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marian.o&apos;hara@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>melinda.michell@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ruth.rhodes@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Auto approve if the Product Family does not contain UCaaS, Unified Communications, Webcast or Collaboration, else send to Sales Ops</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Opportunity_Product_Families__c</field>
                <operation>contains</operation>
                <value>UCaaS,Unified Communications,Collaboration,Webcast</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Deal_Type__c</field>
                <operation>equals</operation>
                <value>New Business,Win Back</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>UCaaS, Collab, &amp; Webcast Review</label>
        <name>UCaaS_Collab_Webcast_Review</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Won_Approval_Request_Submitted_HTML</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Pending Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ClosedWon_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Forecast_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Stage_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ClosedWon_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Purchase</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Pending Approval (UC &amp; Collab)</label>
    <recallActions>
        <action>
            <name>Stage_to_Purchase</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
