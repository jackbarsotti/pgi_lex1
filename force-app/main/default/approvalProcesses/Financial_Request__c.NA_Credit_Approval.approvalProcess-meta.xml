<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Sales_Rep__c</field>
        <field>PGi_Company__c</field>
        <field>Bill_To_Client__c</field>
        <field>Invoice_Number__c</field>
        <field>Estimated_Dollar_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>PGi_FinReq_NA_Credit_Committee</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>NA Credit Committee Approval</label>
        <name>NA_Credit_Committee_Approval</name>
    </approvalStep>
    <emailTemplate>FinReq_Folder/PGI_FinReq_NA_Credit_Approver_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Financial_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>PGi-Credit Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Region__c</field>
            <operation>equals</operation>
            <value>NA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.PGi_Company_Name__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Invoice_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Request__c.Adjustment_Type__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PGi_FinReq_NA_Credit_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_Approved_AR_Owner</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_Approved_RT_Payment</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_CommitteeAppr</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PGi_FinReq_NA_Credit_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PGi_FinReq_NA_Credit_Pending_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>NA Credit Approval</label>
    <recallActions>
        <action>
            <name>PGi_FinReq_NA_Credit_Recalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PGi_FinReq_NA_Credit_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
