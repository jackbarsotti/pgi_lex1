<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Amount</field>
        <field>Products__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.jones@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ecaterina.ivanov@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>fionnuala.odonoghue@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>kim.sankovich@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>marian.o&apos;hara@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>melinda.michell@pgi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ruth.rhodes@pgi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Auto approve if the Product Family does not contain UCaaS, Unified Communications, or Collaboration and Deal Type = New Business or Winback ...OR.. If Webcast or Webinar MRR is greater than $0 and Deal Type = New Business or Winback</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.AdminTagTEXT__c</field>
                <operation>equals</operation>
                <value>mrmcgoolovesyou</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval for UC &amp; Collab ..OR.. MRR Webcast &amp; MRR Webinar</label>
        <name>Approval_for_UCaas_and_Collab</name>
        <rejectionActions>
            <action>
                <name>ClosedWon_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Stage_to_Purchase</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Won_Approval_Request_Submitted_HTML</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Pending Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ClosedWon_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Forecast_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Stage_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PGi-Closed Pending Approval</label>
    <recallActions>
        <action>
            <name>Stage_to_Purchase</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
