    <description>-------------------------------------------------------------------------------------------------------------
CIR request with a value under $10,000USD and under 5% increase in salary package.
-------------------------------------------------------------------------------------------------------------</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Compensation_Increase_Request__c.Amount_of_Increase__c</field>
            <operation>lessThan</operation>
