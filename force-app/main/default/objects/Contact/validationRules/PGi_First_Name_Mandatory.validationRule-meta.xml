<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PGi_First_Name_Mandatory</fullName>
    <active>true</active>
    <description>First Name made mandatory when a user tries to save a contact record</description>
    <errorConditionFormula>AND(
CONTAINS(RecordType.Name, &quot;PGi&quot;), 
$User.ProfileId &lt;&gt; &quot;00e30000001kms9&quot;, 
ISBLANK( FirstName ),
$User.Override_Validation_Rules__c = FALSE
)</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>First Name is required when creating a Contact</errorMessage>
</ValidationRule>
