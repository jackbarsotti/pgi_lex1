<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Oppty_Amount_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND ( 
$User.ProfileId &lt;&gt; &quot;00e30000001kms9&quot;,
ISPICKVAL( StageName, &quot;Investigate&quot;),  Amount =0,
Contains( $RecordType.Name,&quot;ReadyTalk&quot;))</errorConditionFormula>
    <errorDisplayField>Amount</errorDisplayField>
    <errorMessage>Amount field must filled in at this Stage.</errorMessage>
</ValidationRule>
