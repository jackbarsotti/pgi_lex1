    <fullName>ReadyTalk_Oppty_ClosedLost_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>and( 
$User.ProfileId &lt;&gt; &quot;00e30000001kms9&quot;,
ISPICKVAL( StageName, &quot;Closed Lost&quot;),
ispickval(Closed_Lost_Nuture_Reason__c,&quot;&quot;),
