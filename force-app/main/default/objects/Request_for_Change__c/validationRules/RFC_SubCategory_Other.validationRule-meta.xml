<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RFC_SubCategory_Other</fullName>
    <active>false</active>
    <description>When the Sub Category is Other</description>
    <errorConditionFormula>AND(
ISPICKVAL(   Sub_Category__c   , &#39;Other&#39;),
ISBLANK ( If_Other__c )
)</errorConditionFormula>
    <errorDisplayField>If_Other__c</errorDisplayField>
    <errorMessage>You must populate if your Sub-Category is Other</errorMessage>
</ValidationRule>
