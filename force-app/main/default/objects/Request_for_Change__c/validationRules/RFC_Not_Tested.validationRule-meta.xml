<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RFC_Not_Tested</fullName>
    <active>false</active>
    <description>If &quot;Has Backout Been Tested&quot; = No then user must advise why</description>
    <errorConditionFormula>AND(
ISPICKVAL( Has_Backout_Been_Tested__c , &apos;No&apos;) ,
ISBLANK( If_not_tested_why__c ) 
)</errorConditionFormula>
    <errorDisplayField>If_not_tested_why__c</errorDisplayField>
    <errorMessage>Please advise why a blackout has not been tested.</errorMessage>
</ValidationRule>
