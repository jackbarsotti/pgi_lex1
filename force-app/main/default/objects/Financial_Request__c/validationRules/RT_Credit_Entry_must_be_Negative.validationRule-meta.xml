<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RT_Credit_Entry_must_be_Negative</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
Credit_Amount__c &gt; 0,
RecordType.DeveloperName = &apos;ReadyTalk_Credit_Request&apos;)</errorConditionFormula>
    <errorDisplayField>Credit_Amount__c</errorDisplayField>
    <errorMessage>Credit Entry must be a negative number.</errorMessage>
</ValidationRule>
