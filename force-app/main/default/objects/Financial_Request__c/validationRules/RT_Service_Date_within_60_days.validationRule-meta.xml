<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RT_Service_Date_within_60_days</fullName>
    <active>true</active>
    <description>The Credit Requests &quot;Service Date&quot; must be within the last 60 days</description>
    <errorConditionFormula>AND(
Service_Date__c - TODAY () &lt; -60,
RecordType.DeveloperName = &#39;ReadyTalk_Credit_Request&#39;)</errorConditionFormula>
    <errorDisplayField>Service_Date__c</errorDisplayField>
    <errorMessage>The Service Date must be within the lat 60 days.</errorMessage>
</ValidationRule>
