<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RT_Removal_date_not_required</fullName>
    <active>true</active>
    <description>When the Duration is marked as &quot;Permanent&quot;, an Exemption Date is not required</description>
    <errorConditionFormula>AND(
ispickval( Duration__c, &apos;Permanent&apos;),
NOT (isblank(Exemption_Removal_Date__c)),
RecordType.DeveloperName = &apos;ReadyTalk_Exemption_Request&apos;)</errorConditionFormula>
    <errorDisplayField>Exemption_Removal_Date__c</errorDisplayField>
    <errorMessage>When the Duration is marked as &quot;Permanent&quot;, Exemption Removal datee should be blank.</errorMessage>
</ValidationRule>
