<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RFP_Partner_Oppty_Details_required</fullName>
    <active>true</active>
    <description>When PGi Bidding is Partner, then Details are required.</description>
    <errorConditionFormula>AND (
( ISPICKVAL (PGi_Bidding__c , &quot;Partner&quot;)),
(ISBLANK ( Partner_Oppty_Details__c)))</errorConditionFormula>
    <errorDisplayField>Partner_Oppty_Details__c</errorDisplayField>
    <errorMessage>Partner Oppty Details are required.</errorMessage>
</ValidationRule>
