<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RFP_Partner_Name_required</fullName>
    <active>true</active>
    <description>When PGi Bidding is Partner, then Partner Name is required.</description>
    <errorConditionFormula>AND (
( ISPICKVAL (PGi_Bidding__c , &quot;Partner&quot;)),
(ISBLANK (Partner_Name__c )))</errorConditionFormula>
    <errorDisplayField>Partner_Name__c</errorDisplayField>
    <errorMessage>Please choose either Agent or Reseller.</errorMessage>
</ValidationRule>
