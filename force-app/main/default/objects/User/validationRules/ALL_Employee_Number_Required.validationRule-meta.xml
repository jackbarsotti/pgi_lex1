<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ALL_Employee_Number_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 IsActive = True, 
 ISBLANK(EmployeeNumber ))</errorConditionFormula>
    <errorDisplayField>EmployeeNumber</errorDisplayField>
    <errorMessage>Employee Number Required</errorMessage>
</ValidationRule>
