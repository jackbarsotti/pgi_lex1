<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ALL_Ensure_no_x_on_last_name_of_active</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
BEGINS( LastName , &quot;x-&quot;),
! IsActive = False
)</errorConditionFormula>
    <errorDisplayField>IsActive</errorDisplayField>
    <errorMessage>Please set this user to be inactive when the last name contains &quot;x-&quot;</errorMessage>
</ValidationRule>
