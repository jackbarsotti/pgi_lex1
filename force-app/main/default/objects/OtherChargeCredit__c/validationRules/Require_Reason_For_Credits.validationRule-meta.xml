<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Reason_For_Credits</fullName>
    <active>true</active>
    <description>Requires a reason to be selected for credits.</description>
    <errorConditionFormula>AND( 
ISBLANK(TEXT( Reason__c )), 
CONTAINS( TEXT(Product__c) ,&#39;Credit&#39;))</errorConditionFormula>
    <errorDisplayField>Reason__c</errorDisplayField>
    <errorMessage>Please select a reason for the credit and save again.</errorMessage>
</ValidationRule>
