<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Acct_Card_Name_Required</fullName>
    <active>true</active>
    <description>user is sf admin</description>
    <errorConditionFormula>AND ( 
$User.ProfileId &lt;&gt; &quot;00e30000001kms9&quot;, 
 len(Account_Card_Name__c)&lt;1,
  Provisioned__c, $User.ReadyTalk_Exempt__c &lt;&gt; TRUE,
RecordType.DeveloperName = &quot;ReadyTalk_Account&quot;
)</errorConditionFormula>
    <errorDisplayField>Account_Card_Name__c</errorDisplayField>
    <errorMessage>Required. (This is a short version of the Account Name.)</errorMessage>
</ValidationRule>
