<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Acct_Security_Option</fullName>
    <active>true</active>
    <description>Security option must be set to something on the account</description>
    <errorConditionFormula>AND(
RecordType.DeveloperName = &quot;ReadyTalk_Account&quot;,
ISPICKVAL(Security_Option__c, &quot;&quot;))</errorConditionFormula>
    <errorDisplayField>Security_Option__c</errorDisplayField>
    <errorMessage>Choose No Security, Optional Security or Mandatory Security.</errorMessage>
</ValidationRule>
