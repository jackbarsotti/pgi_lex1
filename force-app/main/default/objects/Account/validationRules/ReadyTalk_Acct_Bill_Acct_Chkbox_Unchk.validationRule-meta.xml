<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Acct_Bill_Acct_Chkbox_Unchk</fullName>
    <active>true</active>
    <description>If Bill Account Checkbox is unchecked, require a non billing reason to be selected</description>
    <errorConditionFormula>AND(
$User.ProfileId &lt;&gt; &quot;00e30000001kms9&quot;,
Bill_Account__c=FALSE, 
 ISPICKVAL(Non_Billing_Reason__c,&quot;&quot;),
RecordType.DeveloperName = &quot;ReadyTalk_Account&quot;)</errorConditionFormula>
    <errorDisplayField>Non_Billing_Reason__c</errorDisplayField>
    <errorMessage>If this account is not being billed for ReadyTalk services, a reason is required.</errorMessage>
</ValidationRule>
