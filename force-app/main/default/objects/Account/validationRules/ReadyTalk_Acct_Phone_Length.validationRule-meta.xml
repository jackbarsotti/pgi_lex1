<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Acct_Phone_Length</fullName>
    <active>true</active>
    <description>Phone field cannot be &gt; 22 characters.</description>
    <errorConditionFormula>AND(
LEN(Phone) &gt; 22,
RecordType.DeveloperName = &quot;ReadyTalk_Account&quot;)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>The phone length may not be &gt; 22 characters.</errorMessage>
</ValidationRule>
