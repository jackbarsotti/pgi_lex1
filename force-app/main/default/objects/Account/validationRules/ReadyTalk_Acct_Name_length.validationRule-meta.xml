<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReadyTalk_Acct_Name_length</fullName>
    <active>true</active>
    <description>The account name cannot be &gt; 83 characters.</description>
    <errorConditionFormula>AND(
LEN(Name) &gt;83,
RecordType.DeveloperName = &quot;ReadyTalk_Account&quot;)</errorConditionFormula>
    <errorDisplayField>Account_Not_Billing_Notes__c</errorDisplayField>
    <errorMessage>The account name cannot be &gt; 83 characters.</errorMessage>
</ValidationRule>
