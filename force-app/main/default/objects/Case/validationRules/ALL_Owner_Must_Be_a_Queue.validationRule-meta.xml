<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ALL_Owner_Must_Be_a_Queue</fullName>
    <active>true</active>
    <description>This is to ensure case owner = a queue and not a user!</description>
    <errorConditionFormula>AND( 
NOT(ISCHANGED(IsUpdateFromCaseComment__c)),

($User.Id &lt;&gt; &apos;0051B000009MZdY&apos;), 
($User.Id &lt;&gt; &apos;0051300000CC9uZ&apos;), 
($User.Id &lt;&gt; &apos;0051B000009MZdk&apos;), 
ISCHANGED(OwnerId) , 
LEFT( OwnerId , 3) = &apos;005&apos; 
)</errorConditionFormula>
    <errorMessage>Case Ownership must be a Queue and not a User. Users are to be assigned in the Assigned To area.</errorMessage>
</ValidationRule>
