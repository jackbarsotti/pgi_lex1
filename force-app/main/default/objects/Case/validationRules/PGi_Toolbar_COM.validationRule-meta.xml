<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PGi_Toolbar_COM</fullName>
    <active>true</active>
    <description>If Toolbar display in COM add-ins is yes then additional details are needed</description>
    <errorConditionFormula>AND(
$Profile.Name &lt;&gt; &quot;System Administrator&quot;,
NOT(ISCHANGED(IsUpdateFromCaseComment__c)),
ISPICKVAL(  Toolbar_display_in_COM_add_ins__c ,&apos;Yes&apos;),
ISPICKVAL(   Was_the_user_able_to_enable_COM_add_ins__c, &apos;&apos; ) 
)</errorConditionFormula>
    <errorDisplayField>Was_the_user_able_to_enable_COM_add_ins__c</errorDisplayField>
    <errorMessage>Please provide a value</errorMessage>
</ValidationRule>
