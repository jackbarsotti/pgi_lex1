<aura:component implements="force:lightningQuickAction,force:hasRecordId,lightning:isUrlAddressable" 
                controller = "GenerateNCSController"
                access="global" >
    <aura:html tag="style">
        .slds-modal {
        visibility: hidden;
        display: none;
        }
        .slds-backdrop{
        display: none;
        
        }        
    </aura:html>
    <aura:attribute name="customSetting" type="String" default="" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
</aura:component>