<aura:component controller="CloneSingleRecord" implements="force:hasRecordId,force:lightningQuickActionWithoutHeader,flexipage:availableForAllPageTypes,force:appHostable" access="global">
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="errorMsg" type="String" />
    <aura:html tag="style">
        .slds-modal__content {
        position:relative;
        }    
    </aura:html> 
    
    <div class="exampleHolder">
        <lightning:spinner alternativeText="Loading" size="medium" />
    </div>
    <ui:message aura:id="errorMsg" severity="error" class="slds-hide">
        {!v.errorMsg}
    </ui:message>
</aura:component>