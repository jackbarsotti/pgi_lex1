<aura:component implements="force:lightningQuickAction,force:hasRecordId"
                access="global">
    <aura:attribute name="options" type="List" default="[]"/>
     <aura:attribute name="recordType" type="List" default="[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
	<p> Escalation Type</p>
    <lightning:combobox name="general" label="Escalation Type" placeholder="Select an Option" options="{! v.options }" onchange="{! c.handleChange }"/>
    <p> Escalation Record Type</p>
    <lightning:combobox name="general" label="Escalation Type" placeholder="Select an Option" options="{! v.recordType }"/>
</aura:component>